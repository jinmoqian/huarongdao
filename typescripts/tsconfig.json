{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es5",
        "module": "amd",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "../statics",
        "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
